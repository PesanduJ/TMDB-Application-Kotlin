<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#20252E"
    tools:context=".Payment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay for tickets"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/movieName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bat man"
            android:textSize="25dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="left"
            android:textColor="@color/white"
            android:paddingLeft="20dp"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="15dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="left"
            android:textColor="@color/white"
            android:paddingLeft="20dp"/>

        <TextView
            android:id="@+id/seatNames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seats"
            android:textSize="15dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="left"
            android:textColor="@color/white"
            android:paddingLeft="20dp"/>

        <TextView
            android:id="@+id/noOfSeats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="25dp"
            android:paddingLeft="20dp"
            android:text="No of seats"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/payAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/tear_line" />


        <ToggleButton
            android:id="@+id/razorPay"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:foreground="@drawable/razorpay"
            android:background="@color/white"
            android:textColor="#00000000"
            android:textOff=""
            android:textOn="â€¢"
            android:layout_marginTop="15dp"
            app:shapeAppearanceOverlay="@style/RoundedSquare" />

        <Button
            android:id="@+id/btn_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#FE7829"
            android:text="Pay Now"
            app:shapeAppearanceOverlay="@style/RoundedSquare" />


    </LinearLayout>

</LinearLayout>