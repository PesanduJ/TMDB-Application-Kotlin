<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/nowShowingImageView"
            android:layout_width="270dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            app:shapeAppearanceOverlay="@style/RoundedSquare" />


        <TextView
            android:id="@+id/txtName"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/imageButton2"
            android:fontFamily="@font/alata"
            android:text="Dune"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/txtMovieTitle"
            android:fontFamily="@font/droid_sans"
            android:text="Time Genre Year"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#BCB7BD"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_removeShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="#D98639"
            android:text="Remove"
            app:shapeAppearanceOverlay="@style/RoundedSquare" />

        <TextView
            android:id="@+id/txtRating"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/txtMovieTitle"
            android:fontFamily="@font/droid_sans"
            android:text="Time Genre Year"
            android:layout_gravity="center"
            android:textColor="#BCB7BD"
            android:textSize="18dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txtId1"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_toEndOf="@+id/txtMovieTitle"
            android:fontFamily="@font/droid_sans"
            android:text="Time Genre Year"
            android:textColor="#BCB7BD"
            android:textSize="18dp"
            android:visibility="invisible" />

</LinearLayout>